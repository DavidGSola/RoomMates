<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.roommates"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/plus_button_default"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- Groceries directory -->
        <activity
            android:name="com.example.roommates.GroceriesActivity"
            android:label="@string/navdrawer_item_groceries" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Bills directory -->
        <activity
            android:name="com.example.roommates.BillsActivity"
            android:label="@string/navdrawer_item_bills"
		/>
        
        <!-- Task directory -->
        <activity
            android:name="com.example.roommates.TasksActivity"
            android:label="@string/navdrawer_item_tasks"
		/>
        
        <!-- Roommates directory -->
        <activity
            android:name="com.example.roommates.RoommatesActivity"
            android:label="@string/navdrawer_item_roommates"
		/>
    </application>

</manifest>
