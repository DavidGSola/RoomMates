    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/darker</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionModeBackground">@color/theme_primary</item>
    </style>

    <style name="AppTheme_ActionBar_Title" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">20sp</item>
	</style>
    
	<!-- ActionBar Tabs Style -->    
    <style name="MyActionBarTabs">
    	<item name="android:background">@drawable/tab_bar_selector</item>
    	<item name="android:gravity">center</item>
    </style>
    
	<!-- ActionBar Title Tabs Style -->    
    <style name="MyActionBarTabsText" parent="android:style/Widget.Holo.Light.ActionBar.TabText">
    	<item name="android:textColor">@color/selector_tab_text</item>
    </style>

    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

   	<style name="TitleList" parent="@android:style/TextAppearance">
		<item name="android:textColor">#A4A4A4</item>
       	<item name="android:textSize">20sp</item>
       	<item name="android:paddingLeft">12dp</item>
       	<item name="android:paddingTop">10dp</item>
   	</style>
   
   	<style name="TextItemDoubleLine" parent="Text">
       	<item name="android:paddingLeft">16dp</item>
   	</style>

	<style name="PrimaryTextItemDoubleLine" parent="TextItemDoubleLine">
	    <item name="android:alpha">0.87</item>
       	<item name="android:paddingRight">60dp</item>
       	<item name="android:paddingTop">16dp</item>
       	<item name="android:textSize">16sp</item>
   	</style>
   
	<style name="SecondaryTextItemDoubleLine" parent="TextItemDoubleLine">
	    <item name="android:alpha">0.54</item>
       	<item name="android:paddingRight">16dp</item>
       	<item name="android:textSize">14sp</item>
   	</style>
   	
	<style name="ExtraTextItemDoubleLine" parent="TextItemDoubleLine">
	    <item name="android:alpha">0.54</item>
       	<item name="android:paddingRight">16dp</item>
       	<item name="android:paddingTop">14dp</item>
       	<item name="android:textSize">12sp</item>
   	</style>

	<style name="RoommatesGrid" parent="@android:style/TextAppearance">
       	<item name="android:gravity">center</item>
	</style>
	
	<style name="RoommatesTitleGrid" parent="RoommatesGrid">
       	<item name="android:textSize">14sp</item>
       	<item name="android:textColor">@color/secondary_text</item>
	</style>
	
	<style name="RoommatesSubtitleGrid" parent="RoommatesGrid">
       	<item name="android:textSize">18sp</item>
       	<item name="android:textStyle">bold</item>
	</style>
</resources>
